<p id="notice"><%= notice %></p>
<div class='people display'>
  <p>
    <strong>Email:</strong>
    <%= @person.email %>
  </p>

  <p>
    <strong>Name:</strong>
    <%= @person.name %>
  </p>

  <p>
    <strong>Plants:</strong>
    <ul>
      <% @person.plants.each do |plant| %>
      <li> <%= link_to plant.name, plant_path(plant) %> </li>
      <% end %>
    </ul>
  </p>

  <%= link_to 'Add a new plant', new_plant_path %> |
  <%= link_to 'Edit', edit_person_path(@person) %> |
  <%= link_to 'Back', people_path %>
</div>
